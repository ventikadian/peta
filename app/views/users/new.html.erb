<h1> Sign Up </h1>
<% if !@user.errors.empty? %>
	<% @user.errors.full_messages.each do |msg| %>
		<h4 style="color:red;"><%= msg %></h4>
		<% end %> 
	<% end %>
<%= form_for @user do |f| %>
	<%= f.label :email %> :
	<%= f.text_field :email %>
	<br/>
	<%= f.label :password %> : 
	<%= f.password_field :password %>
	</br>
	<%= f.label :password_confirmation %> : 
	<%= f.password_field :password_confirmation %>
	<br/>
<%= f.submit %>
<% end %>